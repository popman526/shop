<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.goodstudy.mall.product.mapper.ProductMapper">
	
    <select id="selectProductByProductId" resultType="product">
        SELECT product_id
              ,product_name
              ,product_state
              ,product_price
              ,product_quantity
              ,reg_id
              ,reg_dt
          FROM product
         WHERE product_id = #{product_id}
    </select>

    <select id="selectAllProduct" resultType="product" parameterType="string">
        SELECT product_id
              ,product_name
              ,product_state
              ,product_price
              ,reg_id
              ,reg_dt
          FROM product
          <if test="srchTerm!=null and !srchTerm.equals('')">
			WHERE product_name like '%${srchTerm}%'
		  </if>
          ORDER BY product_id desc
          LIMIT #{startRow}, 10
    </select>

    <insert id="insertProduct" parameterType="Product" useGeneratedKeys="true" keyProperty="product_id">
      INSERT INTO product (
             product_name
            ,product_state
            ,product_price
            ,product_quantity
            ,reg_id
            ,reg_dt
      ) VALUES (
             #{product_name}
            ,#{product_state}
            ,#{product_price}
            ,#{product_quantity}
            ,#{reg_id}
            ,sysdate()
      )
    </insert>
    
    <delete id="deleteProductByProductId">
      DELETE FROM product
      WHERE product_id = #{product_id}
    </delete>
    
    <update id="updateProductByProduct">
      UPDATE product
      SET
         product_name = #{product_name}
        ,product_state = #{product_state}
        ,product_price = #{product_price}
        ,product_quantity = #{product_quantity}
        ,mod_id = #{mod_id}
        ,mod_dt = sysdate()
      WHERE product_id = #{product_id}
    </update>
    
    <select id="getProductCount" resultType="Integer" parameterType="string">
      SELECT count(*)
        FROM product
        <if test="value!=null and !value.equals('')">
			WHERE product_name like '%${value}%'
		</if>
    </select>
    
</mapper>