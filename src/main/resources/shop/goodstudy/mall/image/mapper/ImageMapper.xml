<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.goodstudy.mall.image.mapper.ImageMapper">

    <insert id="insertImage" parameterType="Image">
      INSERT INTO mall.product_image (
             physical_name
            ,image_name
            ,imagefile
            ,product_id
      ) VALUES (
             #{physical_name}
            ,#{image_name}
            ,#{imagefile}
            ,#{product_id}
      )
    </insert>
    
    <select id="downloadMainImage" resultType="Image">
        SELECT imagefile
          FROM mall.product_image
         WHERE product_id = #{product_id}
         LIMIT 1
    </select>
    
    <select id="selectAllImageIdByProductId" resultType="Image">
        SELECT image_id
          FROM mall.product_image
         WHERE product_id = #{product_id}
    </select>
    
    <select id="downloadContentImage" resultType="Image">
        SELECT imagefile
          FROM mall.product_image
         WHERE image_id = #{image_id}
    </select>
    
      <insert id="insertThumbnail" parameterType="Thumbnail">
      INSERT INTO mall.thumbnail (
             thumbfile
            ,product_id
      ) VALUES (
             #{thumbfile}
            ,#{product_id}
      )
    </insert>
    
    <select id="downloadThumbnail" resultType="Thumbnail">
        SELECT thumbfile
          FROM mall.thumbnail
         WHERE product_id = #{product_id}
         LIMIT 1
    </select>
    
    <select id="countThumbnail" resultType="int">
        SELECT count(1) cnt
          FROM mall.thumbnail
         WHERE product_id = #{product_id}
    </select>

</mapper>